{
    "name": "yorus/domain-extra-library",
    "type": "library",
    "license": "MIT",
    "description": "YoRus Consulting - Common PHP components",
    "require": {
        "php": ">=8.0",
        "ramsey/uuid": "^4.7",
        "symfony/messenger": "^7.0",
        "symfony/orm-pack": "^2.4",
        "symfony/validator": "^7.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "YoRus\\DomainExtraLibrary\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YoRus\\DomainExtraLibrary\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.10",
        "symfony/dotenv": "^7.0",
        "symfony/test-pack": "^1.1"
    }
}
